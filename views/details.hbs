<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Attach Accessory</title>
    <link href="/css/site.css" type="text/css" rel="stylesheet">
    <link rel='shortcut icon' type='image/x-icon' href='./images/favicon.png' />
</head>
<body>
    <div class="container">
        <header>
            <ul>
                <li><img class="logo" src="/images/logo.png"></li>
                <li><a href="/">Browse</a></li>
                <li><a href="/about">About</a></li>
                {{#if loggedIn}}
                <li><a href="/create">Add a Cube</a></li>
                <li><a href="/create/accessory">Add Accessory</a></li>
                <li><a href="/logout">Logout</a></li>
                {{/if}}
            </ul>
        </header>
        <main>
            {{#with cube}}
            <h1>{{name}}</h1>
            <img class="cube" src={{imageUrl}}>
            <div class="details">
                <p><span>Description:</span>{{description}}</p>
                <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
                <a class="btn" href="/">Back</a>
            {{/with}}
                {{#if authorized}}
                {{#with cube}}
                <a class="btn" href="/attach/accessory/{{_id}}">Attach Accessory</a>
                <a class="btn" href="/edit/{{_id}}">Edit Cube</a>
                <a class="btn" href="/delete/{{_id}}">Delete Cube</a>
                {{/with}}
                {{/if}}
            </div>
            {{#if authorized}}
            <h2>Accessories</h2>
            <div class="accessories">
                {{#each accessory}}
                <div class="accessory">
                    <img src="{{imageUrl}}" alt="stickerName">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>
                {{/each}}
            {{/if}}
                {{!-- <div class="accessory">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/61J8UP8pySL._SX425_.jpg" alt="stickerName">
                    <h3>Accessory Name</h3>
                    <p>Accessory Description</p>
                </div>
                <div class="accessory">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/61J8UP8pySL._SX425_.jpg" alt="stickerName">
                    <h3>Accessory Name</h3>
                    <p>Accessory Description</p>
                </div> --}}
                {{#unless accessory}}
                <h3 class="italic">This cube has no accessories yet...</h3>
                {{/unless}}
            </div>
            {{/with}}
        </main>
    </div>
    <footer>@Cubicle: Exercise for Express.js and Handlebars</footer>
</body>
</html>